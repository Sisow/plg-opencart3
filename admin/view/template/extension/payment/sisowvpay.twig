{{ header }}{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
		  <div class="pull-right">
			<button type="submit" form="form-pp-payflow" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
			<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
		  <h1>{{ heading_title }}</h1>
		  <ul class="breadcrumb">
			{% for breadcrumb in breadcrumbs %}
			<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
			{% endfor %}
		  </ul>
		</div>
	</div>
	<div class="container-fluid">
	{% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
	
	<div class="alert alert-warning"><i class="fa fa-exclamation-circle"></i> {{ entry_extra_contract }}</div>
	
	<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-sisow-ideal" class="form-horizontal">
		<div class="form-group required">
			<label class="col-sm-2 control-label" for="entry_merchantid">{{ entry_merchantid }}</label>
			<div class="col-sm-2">
				<input type="text" name="payment_sisowvpay_merchantid" value="{{ payment_sisowvpay_merchantid }}" id="entry_merchantid" class="form-control" maxlength="32" size = "32"/>
				{% if username %}
				<div class="text-danger">{{ username }}</div>
				{% endif %}
			</div>
		</div>
		
		<div class="form-group required">
			<label class="col-sm-2 control-label" for="entry_merchantkey">{{ entry_merchantkey }}</label>
			<div class="col-sm-4">
				<input type="text" name="payment_sisowvpay_merchantkey" value="{{ payment_sisowvpay_merchantkey }}" id="entry_merchantkey" class="form-control" maxlength="64" size = "64"/>
				{% if username %}
				<div class="text-danger">{{ username }}</div>
				{% endif %}
			</div>
		</div>	
		
		<div class="form-group">
			<label class="col-sm-2 control-label" for="entry_shopid">{{ entry_shopid }}</label>
			<div class="col-sm-2">
				<input type="text" name="payment_sisowvpay_shopid" value="{{ payment_sisowvpay_shopid }}" id="entry_shopid" class="form-control" maxlength="8" size = "8"/>
			</div>
		</div>
		
		<div class="form-group">
			<label class="col-sm-2 control-label" for="entry_success">{{ entry_success }}</label>
			<div class="col-sm-2">
				<select name="payment_sisowvpay_status_success" id="entry_success" class="form-control">
				{% for order_status in order_statuses %}
					{% if order_status.order_status_id == payment_sisowvpay_status_success %}
						<option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
					{% else %}
						<option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
					{% endif %}
				{% endfor %}
			  </select>
			</div>
		</div>
		
		<div class="form-group">
			<label class="col-sm-2 control-label" for="entry_paymentfee">{{ entry_paymentfee }}</label>
			<div class="col-sm-2">
				<input type="text" name="payment_sisowvpay_paymentfee" value="{{ payment_sisowvpay_paymentfee }}" id="entry_paymentfee" class="form-control" maxlength="8" size = "8"/>
			</div>
		</div>
		
		<div class="form-group">
			<label class="col-sm-2 control-label" for="entry_success">{{ entry_sisow_fee_tax }}</label>
			<div class="col-sm-3">
				<select name="payment_sisowvpay_fee_tax" id="entry_success" class="form-control">
				{% for tax_class in tax_classes %}
					{% if tax_class.tax_class_id == payment_sisowvpay_fee_tax %}
						<option value="{{ tax_class.tax_class_id }}" selected="selected">{{ tax_class.title }}</option>
					{% else %}
						<option value="{{ tax_class.tax_class_id }}">{{ tax_class.title }}</option>
					{% endif %}
				{% endfor %}
			  </select>
			</div>
		</div>
		
		<div class="form-group">
			<label class="col-sm-2 control-label" for="entry_testmode">{{ entry_testmode }}</label>
			<div class="col-sm-2">
				<select name="payment_sisowvpay_testmode" id="entry_testmode" class="form-control">
					{% if payment_sisowvpay_testmode == 'true' %}
						<option value="true" selected="selected">{{ text_yes }}</option>
						<option value="false">{{ text_no }}</option>
					{% else %}
						<option value="true">{{ text_yes }}</option>
						<option value="false" selected="selected">{{ text_no }}</option>
					{% endif %}
			  </select>
			</div>
		</div>
		
		<div class="form-group">
			<label class="col-sm-2 control-label" for="entry_total">{{ entry_total }}</label>
			<div class="col-sm-2">
				<input type="text" name="payment_sisowvpay_total" value="{{ payment_sisowvpay_total }}" id="entry_total" class="form-control" maxlength="8" size = "8"/>
			</div>
		</div>
		
		<div class="form-group">
			<label class="col-sm-2 control-label" for="entry_totalmax">{{ entry_totalmax }}</label>
			<div class="col-sm-2">
				<input type="text" name="payment_sisowvpay_totalmax" value="{{ payment_sisowvpay_totalmax }}" id="entry_totalmax" class="form-control" maxlength="8" size = "8"/>
			</div>
		</div>
		
		<div class="form-group">
			<label class="col-sm-2 control-label" for="entry_geo_zone">{{ entry_geo_zone }}</label>
			<div class="col-sm-2">
				<select name="payment_sisowvpay_geo_zone_id" id="entry_geo_zone" class="form-control">
				<option value="0">All zones</option>
				{% for geo_zone in geo_zones %}
					{% if geo_zone.geo_zone_id == payment_sisowvpay_geo_zone_id %}
						<option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
					{% else %}
						<option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
					{% endif %}
				{% endfor %}
			  </select>
			</div>
		</div>
		
		<div class="form-group">
			<label class="col-sm-2 control-label" for="entry_status">{{ entry_status }}</label>
			<div class="col-sm-2">
				<select name="payment_sisowvpay_status" id="entry_status" class="form-control">
					{% if payment_sisowvpay_status %}
						<option value="1" selected="selected">{{ text_enabled }}</option>
						<option value="0">{{ text_disabled }}</option>
					{% else %}
						<option value="1">{{ text_enabled }}</option>
						<option value="0" selected="selected">{{ text_disabled }}</option>
					{% endif %}
			  </select>
			</div>
		</div>
		
		<div class="form-group">
			<label class="col-sm-2 control-label" for="entry_sort_order">{{ entry_sort_order }}</label>
			<div class="col-sm-2">
				<input type="text" name="payment_sisowvpay_sort_order" value="{{ payment_sisowvpay_sort_order }}" id="entry_sort_order" class="form-control" maxlength="8" size = "8"/>
			</div>
		</div>
		
		<div class="row">
			<div class="col-sm-2"></div>
			<div class="col-sm-2">
				{{ entry_version_status }}: 
				{{ text_version }}
			</div>
		</div>
